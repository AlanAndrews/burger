<h1>Burgers!</h1>

<h2>Available Burgers!!</h2>

<div>
  {{#each burgers}}
    {{#unless this.devoured}}
    <form action="/update/{{this.id}}/{{this.devoured}}" method="POST">
    <button type="submit">
      {{ this.id}}
      {{this.burger_name}}
      </button>
    </form>
    {{/unless}}
  {{/each}}
</div>

<h2>Devoured Burgers!!</h2>

<div>
  {{#each burgers}}
    {{#if devoured}}
    
      {{this.id}}
      {{this.burger_name}}
      
    {{/if}}
  {{/each}}
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

 

  <button type="submit">Add Burger</button>
</form>
